<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @product.name %>
</p>

<% if @product.allergies.size > 0 %>
  <p>
    <b>Tagged as:</b>
    <ul>
      <% @product.allergies.each do |allergy| %>
        <li><%= (allergy.allergen.capitalize + " Free") %></li>
      <% end %>
    </ul>
  </p>
<% end %>

<p>
  <b>Store:</b>
  <%= @product.store_name %>
</p>


<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
